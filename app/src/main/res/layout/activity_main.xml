<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/titulo_final"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_weight="0.30" />
    <RelativeLayout
        android:layout_height="370dp"
        android:layout_width="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:indeterminate="false"
            android:max="100"
            android:progressDrawable="@drawable/circulo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/c1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:onClick="click"
            android:scaleType="centerInside"
            android:src="@drawable/control1"
            android:layout_margin="1dp"
            android:contentDescription="@string/app_name" />
        <ImageButton
            android:id="@+id/c2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:onClick="click"
            android:scaleType="centerInside"
            android:src="@drawable/control2"
            android:layout_margin="1dp"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/c3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:onClick="click"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/control3"
            android:layout_margin="1dp"
            android:contentDescription="@string/app_name" />
        <ImageButton
            android:id="@+id/c4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:onClick="click"
            android:layout_margin="1dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/control4"
            android:contentDescription="@string/app_name" />

        <ImageButton
            android:id="@+id/c5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:onClick="click"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/control5"
            android:layout_margin="1dp"
            android:contentDescription="@string/app_name" />


    </LinearLayout>

</LinearLayout>